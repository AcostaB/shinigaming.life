{
    "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
    "linterOptions": {
      "exclude": [
        "config/**/*.js",
        "node_modules/**/*.ts"
      ]
    },
    "rules": {
        "no-var-requires": false,
        "prefer-const": false,
        "object-literal-sort-keys": false,
        "one-variable-per-declaration": false,
        "variable-name": [
            true, 
            "ban-keywords", 
            "check-format", 
            "allow-leading-underscore",
            "allow-snake-case",
            "allow-pascal-case"
        ],
        "no-console": [false],
        "ordered-imports": false,
        "member-ordering": [
            true,
            {
                "order": [
                    "private-static-field",
                    "private-instance-field",
                    "public-static-field",
                    "public-instance-field",
                    "private-constructor",
                    "public-constructor",
                    "private-instance-method",
                    "public-instance-method",
                    "protected-instance-method"
                ]
            }
        ]
    },
    "jsRules": {
        "prefer-const": false,
        "object-literal-sort-keys": false,
        "one-variable-per-declaration": false,
        "variable-name": [
            true, 
            "ban-keywords", 
            "check-format", 
            "allow-leading-underscore",
            "allow-snake-case",
            "allow-pascal-case"
        ],
        "no-console": [false],
        "ordered-imports": false,
        "member-ordering": [
            true,
            {
                "order": [
                    "private-static-field",
                    "private-instance-field",
                    "public-static-field",
                    "public-instance-field",
                    "private-constructor",
                    "public-constructor",
                    "private-instance-method",
                    "public-instance-method",
                    "protected-instance-method"
                ]
            }
        ]
    }
}
  