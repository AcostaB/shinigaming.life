{
    "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
    "linterOptions": {
      "exclude": [
        "config/**/*.js",
        "node_modules/**/*.ts"
      ]
    },
    "rules": {
        "object-literal-sort-keys": false,
        "one-variable-per-declaration": false,
        "variable-name": [
            true, 
            "ban-keywords", 
            "check-format", 
            "allow-leading-underscore",
            "allow-snake-case",
            "allow-pascal-case"
        ],
        "no-console": [false],
        "ordered-imports": false
    },
    "jsRules": {
        "object-literal-sort-keys": false,
        "one-variable-per-declaration": false,
        "variable-name": [
            true, 
            "ban-keywords", 
            "check-format", 
            "allow-leading-underscore",
            "allow-snake-case",
            "allow-pascal-case"
        ],
        "no-console": [false],
        "ordered-imports": false
    }
  }
  